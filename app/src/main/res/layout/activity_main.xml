<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fafcfd"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/metall_ore"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/metall_ore"

        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="@+id/cristall_ore"
        app:layout_constraintStart_toStartOf="parent" />
    <ImageView
        android:id="@+id/cristall_ore"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/cristall_ore"

        android:layout_marginTop="100dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/deuteri_ore"
        app:layout_constraintStart_toEndOf="@id/metall_ore"/>
    <ImageView
        android:id="@+id/deuteri_ore"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/deuteri_ore"

        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="@+id/cristall_ore"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/minero_metall"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/minerop"

        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="@+id/minero_cristall"
        app:layout_constraintStart_toStartOf="parent" />
    <ImageView
        android:id="@+id/minero_cristall"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/minerop"

        android:layout_marginTop="40dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/deuteri_ore"
        app:layout_constraintStart_toEndOf="@id/metall_ore"/>
    <ImageView
        android:id="@+id/minero_deuteri"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/minerop"

        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="@+id/minero_cristall"
        app:layout_constraintEnd_toEndOf="parent"/>


    <ImageView
        android:id="@+id/metall_raw"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/metall_raw"

        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="@+id/cristall_raw"
        app:layout_constraintStart_toStartOf="parent" />
    <TextView
        android:id="@+id/metall_raw_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="30dp"
        android:textStyle="bold"

        app:layout_constraintEnd_toEndOf="@+id/metall_raw"
        app:layout_constraintStart_toStartOf="@+id/metall_raw"
        app:layout_constraintTop_toBottomOf="@+id/metall_raw" />

    <ImageView
        android:id="@+id/cristall_raw"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/cristall_raw"

        android:layout_marginTop="200dp"

        app:layout_constraintTop_toTopOf="@+id/cristall_ore"
        app:layout_constraintEnd_toStartOf="@+id/deuteri_ore"
        app:layout_constraintStart_toEndOf="@id/metall_ore"/>
    <TextView
        android:id="@+id/cristall_raw_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="30dp"
        android:textStyle="bold"

        app:layout_constraintEnd_toEndOf="@+id/cristall_raw"
        app:layout_constraintStart_toStartOf="@+id/cristall_raw"
        app:layout_constraintTop_toBottomOf="@+id/cristall_raw" />

    <ImageView
        android:id="@+id/deuteri_raw"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/deuteri_raw"

        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="@+id/cristall_raw"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/deuteri_raw_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="30dp"
        android:textStyle="bold"

        app:layout_constraintEnd_toEndOf="@+id/deuteri_raw"
        app:layout_constraintStart_toStartOf="@+id/deuteri_raw"
        app:layout_constraintTop_toBottomOf="@+id/deuteri_raw" />


    <ImageView
        android:id="@+id/metall_lingot"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/metall_lingot"

        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="@+id/cristall_lingot"
        app:layout_constraintStart_toStartOf="parent" />
    <TextView
        android:id="@+id/metall_lingot_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="30dp"
        android:textStyle="bold"

        app:layout_constraintEnd_toEndOf="@+id/metall_raw"
        app:layout_constraintStart_toStartOf="@+id/metall_raw"
        app:layout_constraintTop_toBottomOf="@+id/cristall_lingot" />

    <ImageView
        android:id="@+id/cristall_lingot"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/cristall_lingot"

        android:layout_marginTop="200dp"

        app:layout_constraintTop_toTopOf="@+id/cristall_raw"
        app:layout_constraintEnd_toStartOf="@+id/deuteri_ore"
        app:layout_constraintStart_toEndOf="@id/metall_ore"/>
    <TextView
        android:id="@+id/cristall_lingot_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="30dp"
        android:textStyle="bold"

        app:layout_constraintEnd_toEndOf="@+id/cristall_raw"
        app:layout_constraintStart_toStartOf="@+id/cristall_raw"
        app:layout_constraintTop_toBottomOf="@+id/cristall_lingot" />

    <ImageView
        android:id="@+id/deuteri_lingot"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/deuteri_lingot"

        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="@+id/cristall_lingot"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/deuteri_lingot_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="30dp"
        android:textStyle="bold"

        app:layout_constraintEnd_toEndOf="@+id/deuteri_raw"
        app:layout_constraintStart_toStartOf="@+id/deuteri_raw"
        app:layout_constraintTop_toBottomOf="@+id/cristall_lingot" />

</androidx.constraintlayout.widget.ConstraintLayout>